# EasyMLOps Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=EasyMLOps
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Settings
# Use SQLite for development/demo (no PostgreSQL required)
USE_SQLITE=true
SQLITE_PATH=easymlops.db

# PostgreSQL Settings (for production)
# Set USE_SQLITE=false to use PostgreSQL
# POSTGRES_SERVER=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here
# POSTGRES_DB=easymlops
# DATABASE_URL=postgresql://postgres:password@localhost:5432/easymlops

# File Storage Settings
MODELS_DIR=models
BENTOS_DIR=bentos
STATIC_DIR=static
MAX_FILE_SIZE=524288000  # 500MB in bytes

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings (comma-separated URLs)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Settings
LOG_LEVEL=INFO

# BentoML Settings
BENTOML_HOME=bentos

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090 